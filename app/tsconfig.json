{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "../dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "include": [
        "./**/*.ts",
        "./types/**/*.d.ts"
    ],
    "exclude": [
        "../node_modules"
    ]
}